<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.backbone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Backbone"
        android:usesCleartextTraffic="true">
        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WritingActivity"></activity>
        <activity android:name=".ReadingActivity"></activity>
        <activity android:name=".SearchActivity" />
        <activity android:name=".LockScreenMenuActivity" />
        <activity android:name=".MyQuestionActivity" />
        <activity android:name=".LockedScreenActivity" />
        <activity android:name=".HomeActivity">

        </activity>
        <activity
            android:name=".SavingActivity"
            android:theme="@style/Theme.MyDialog" />
        <activity android:name=".LockedScreenSetActivity" />
        <activity android:name=".LockedScreenOnceActivity" />
    </application>

</manifest>