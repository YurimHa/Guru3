<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Backbone" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/greenMain</item>
        <item name="colorPrimaryVariant">#E6212121</item>
        <item name="colorOnPrimary">@color/greenMain</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/darkBlue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
        <!-- 라디오 버튼 custom -->
        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>
        <!-- 탭 레이아웃 custim -->
        <item name="tabStyle">@style/Widget.App.TabLayout</item>
        <item name="textAppearanceButton">@style/TextAppearance.App.Button</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="android:alertDialogTheme">@style/LongClickPopUp</item>
    </style>

    <!-- 카테고리 팝업 bottom sheet 커스튬 -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_cate_popup</item>
    </style>

    <!-- longClick 팝업 다이얼로그 커스튬 -->
    <style name="LongClickPopUp" parent="Theme.AppCompat.Dialog">
        <item name="background">@drawable/bg_select_pop_up</item>
        <item name="android:textColor">@color/ivory</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:windowBackground">@drawable/bg_select_pop_up</item>
    </style>

    <!-- 다이얼로그 배경 커스튬 -->
    <style name="MyDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@drawable/bg_pop_up</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 카테고리 저장 다이얼로그 배경 커스튬-->
    <style name="CateSaveDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:background">@drawable/bg_cate_save</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!-- 라디오 버튼 커스튬 -->
    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>
    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/ivory</item>
        <item name="colorSecondary">@color/greenMain</item>
    </style>

    <!-- 탭 레이아웃 커스튬 -->
    <style name="Widget.App.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TabLayout</item>
        <item name="tabTextAppearance">@style/TextAppearance.App.Button</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="TextAppearance.App.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/greenMain</item>
        <item name="colorSurface">@color/darkBlue</item>
        <item name="colorOnSurface">@color/darkGray</item>
    </style>


</resources>

