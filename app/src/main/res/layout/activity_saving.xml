<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".SavingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_writing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/cancelTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="카테고리 선택"
            android:textColor="@color/ivory"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/cl_writing"
            app:layout_constraintStart_toStartOf="@id/cl_writing"
            app:layout_constraintTop_toTopOf="@id/cl_writing" />

        <Button
            android:id="@+id/cate_saveBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:text="저장"
            android:textColorHint="@color/ivory"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/cateList"
            app:layout_constraintStart_toStartOf="@+id/cateList"
            app:layout_constraintTop_toBottomOf="@+id/cateList" />

        <ListView
            android:id="@+id/cateList"
            android:layout_width="310dp"
            android:layout_height="180dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="11dp"
            app:layout_constraintEnd_toEndOf="@+id/cancelTitle"
            app:layout_constraintStart_toStartOf="@+id/cancelTitle"
            app:layout_constraintTop_toBottomOf="@id/cancelTitle"
            tools:listitem="@layout/save_category_item">

        </ListView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>