<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    tools:context=".SavingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_writing"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@color/darkBlue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/delImgTxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/roboto_regular"
            android:text="정말 이 이미지를 \n삭제하시겠습니까?"
            android:textColor="@color/ivory"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="@id/cl_writing"
            app:layout_constraintStart_toStartOf="@id/cl_writing"
            app:layout_constraintTop_toTopOf="@id/cl_writing" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancelBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_bg_pop_cancel"
            android:text="취소"
            android:textColor="@color/greenMain"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/delBtn"
            app:layout_constraintStart_toStartOf="@+id/delImgTxt"
            app:layout_constraintTop_toBottomOf="@id/delImgTxt" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/delBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/ic_bg_pop_ok"
            android:text="삭제"
            android:textColor="@color/ivory"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/delImgTxt"
            app:layout_constraintStart_toEndOf="@id/cancelBtn"
            app:layout_constraintTop_toBottomOf="@id/delImgTxt" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>